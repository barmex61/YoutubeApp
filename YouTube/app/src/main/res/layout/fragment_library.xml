<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
       <LinearLayout
           android:id="@+id/headerLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="Recent"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            />
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:layout_marginStart="5dp"
               android:layout_marginTop="5dp"
              />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorDivider"
               android:layout_marginTop="15dp"
               android:id="@+id/viewDivider"/>


       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/header2"
            android:layout_below="@id/headerLayout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_history_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your videos"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_videocam_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downloads"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_download_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch later "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked lideos"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_hearth"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginTop="10dp"
                android:id="@+id/viewDivider2"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header2"
            android:id="@+id/centerLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:text="Playlist"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:text="New Playlist"
                android:textSize="16sp"
                android:textColor="#2242EF"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/recyclerViewPlaylist"/>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>